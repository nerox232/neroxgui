local function HerkesiAsIzYapFonksiyonu()
    local TextChatService = game:GetService("TextChatService")
local Players = game:GetService("Players")

local function bringAllPlayersFast()
    local textChannel = TextChatService:WaitForChild("TextChannels"):FindFirstChild("RBXGeneral")
    if not textChannel then
        warn("Chat kanalı bulunamadı.")
        return
    end

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= Players.LocalPlayer then -- kendini dışla
            local message = ":team " .. player.Name .. " As"
            textChannel:SendAsync(message)
            -- wait() kaldırıldı = maksimum hız
        end
    end
end
bringAllPlayersFast()
    print("Herkesi As.İz Yap fonksiyonu çalıştı")
end
local function HerkeseResetAtFonksiyonu()
    local TextChatService = game:GetService("TextChatService")
local Players = game:GetService("Players")

local function bringAllPlayersFast()
    local textChannel = TextChatService:WaitForChild("TextChannels"):FindFirstChild("RBXGeneral")
    if not textChannel then
        warn("Chat kanalı bulunamadı.")
        return
    end

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= Players.LocalPlayer then -- kendini dışla
            local message = ":re " .. player.Name
            textChannel:SendAsync(message)
            -- wait() kaldırıldı = maksimum hız
        end
    end
end
bringAllPlayersFast()
    print("Herkese Reset At fonksiyonu çalıştı")
end
