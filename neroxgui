-- Butonlara ikon ve sağa kaydırılmış yazı ekleme fonksiyonu
local function createButtonWithIcon(text, iconAssetId)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 38)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.BorderSizePixel = 0
    btn.AutoButtonColor = false
    btn.Text = ""
    
    local btnCorner = Instance.new("UICorner", btn)
    btnCorner.CornerRadius = UDim.new(0, 6)

    local container = Instance.new("Frame", btn)
    container.Size = UDim2.new(1, 0, 1, 0)
    container.BackgroundTransparency = 1

    local layout = Instance.new("UIListLayout", container)
    layout.FillDirection = Enum.FillDirection.Horizontal
    layout.VerticalAlignment = Enum.VerticalAlignment.Center
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Left
    layout.Padding = UDim.new(0, 8)

    if iconAssetId then
        local icon = Instance.new("ImageLabel", container)
        icon.Size = UDim2.new(0, 24, 0, 24)
        icon.BackgroundTransparency = 1
        icon.Image = iconAssetId
        icon.ScaleType = Enum.ScaleType.Fit
    end

    local lbl = Instance.new("TextLabel", container)
    lbl.BackgroundTransparency = 1
    lbl.Size = UDim2.new(1, -32, 1, 0)
    lbl.Text = text
    lbl.Font = Enum.Font.Gotham
    lbl.TextSize = 18
    lbl.TextColor3 = Color3.new(1, 1, 1)
    lbl.TextXAlignment = Enum.TextXAlignment.Left

    addHoverEffect(btn)

    return btn
end

-- Fonksiyon iskeletleri
local function ChatlogsFonksiyonu()
    local Players = game:GetService("Players")
    local player = Players.LocalPlayer
    local PlayerGui = player:WaitForChild("PlayerGui")

    -- Önceki GUI varsa sil
    pcall(function()
        PlayerGui:FindFirstChild("ChatLogsGui"):Destroy()
    end)

    -- GUI oluştur
    local gui = Instance.new("ScreenGui")
    gui.Name = "ChatLogsGui"
    gui.IgnoreGuiInset = true
    gui.ResetOnSpawn = false
    gui.Parent = PlayerGui

    -- Ana panel
    local main = Instance.new("Frame")
    main.Size = UDim2.new(0, 450, 0, 350)
    main.Position = UDim2.new(0.5, -225, 0.5, -175)
    main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    main.BorderSizePixel = 0
    main.Active = true
    main.Draggable = true
    main.Parent = gui

    -- Başlık
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, 0, 0, 30)
    titleLabel.Position = UDim2.new(0, 0, 0, 0)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Font = Enum.Font.SourceSansBold
    titleLabel.TextSize = 24
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.Text = "Nerox Chatlogs"
    titleLabel.Parent = main

    -- Kapatma butonu
    local close = Instance.new("TextButton")
    close.Size = UDim2.new(0, 30, 0, 30)
    close.Position = UDim2.new(1, -35, 0, 5)
    close.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
    close.Text = "X"
    close.Font = Enum.Font.SourceSansBold
    close.TextColor3 = Color3.new(1, 1, 1)
    close.TextSize = 18
    close.Parent = main
    close.MouseButton1Click:Connect(function()
        gui:Destroy()
    end)

    -- Scroll alanı
    local scroll = Instance.new("ScrollingFrame")
    scroll.Size = UDim2.new(1, -20, 1, -65)
    scroll.Position = UDim2.new(0, 10, 0, 35)
    scroll.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    scroll.ScrollBarThickness = 6
    scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.VerticalScrollBarInset = Enum.ScrollBarInset.ScrollBar
    scroll.Parent = main

    -- UIListLayout
    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 5)
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    layout.Parent = scroll

    -- Mesaj ekleme fonksiyonu
    local function AddMsg(name, msg)
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(1, -10, 0, 22)
        label.BackgroundTransparency = 1
        label.Font = Enum.Font.SourceSans
        label.TextSize = 18
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Text = "[" .. name .. "]: " .. msg
        label.Parent = scroll
    end

    -- Mevcut oyuncuların sohbetlerini dinle
    for _, plr in ipairs(Players:GetPlayers()) do
        plr.Chatted:Connect(function(msg)
            AddMsg(plr.Name, msg)
        end)
    end

    -- Yeni oyuncular eklendiğinde sohbetlerini dinle
    Players.PlayerAdded:Connect(function(plr)
        plr.Chatted:Connect(function(msg)
            AddMsg(plr.Name, msg)
        end)
    end)

    print("✅ Chatlogs GUI executor ortamında çalıştı.")
end

local function AntiTrackFonksiyonu()
    local Players = game:GetService("Players")
    local player = Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()

    -- 1. Nametag (Head üzerindeki BillboardGui) sil
    local function RemoveNameTag()
        local head = character:FindFirstChild("Head")
        if head then
            for _, gui in ipairs(head:GetChildren()) do
                if gui:IsA("BillboardGui") then
                    gui:Destroy()
                end
            end
        end
    end
    RemoveNameTag()

    -- Gizli pozisyon olarak belirlenen koordinat
    local hiddenPos = Vector3.new(3146.89, 35.33, -119.78)

    -- 2. Pozisyonu gizlemek için metamethod override (executorlarda destek varsa)
    local success, mt = pcall(function() return getrawmetatable(game) end)
    if success and mt then
        setreadonly(mt, false)
        local oldIndex = mt.__index
        mt.__index = newcclosure(function(self, key)
            if self == character.HumanoidRootPart and (key == "Position" or key == "CFrame") then
                if key == "Position" then
                    return hiddenPos
                elseif key == "CFrame" then
                    return CFrame.new(hiddenPos)
                end
            end
            return oldIndex(self, key)
        end)
        setreadonly(mt, true)
    end

    -- 3. Karakteri gizli pozisyona taşı
    if character:FindFirstChild("HumanoidRootPart") then
        character.HumanoidRootPart.CFrame = CFrame.new(hiddenPos)
    end

    print("Anti Track fonksiyonu çalıştı ve gizli koordinat ayarlandı.")
end

