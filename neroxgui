local function TSKBaseFonksiyonu()
    local hedefKonum = Vector3.new(3139.28, 50.13, -155.17)
local player = game.Players.LocalPlayer
local karakter = player.Character or player.CharacterAdded:Wait()

if karakter and karakter:FindFirstChild("HumanoidRootPart") then
    karakter.HumanoidRootPart.CFrame = CFrame.new(hedefKonum)
    print("TSK Base'e ışınlandın!")
else
    warn("Karakter veya HumanoidRootPart bulunamadı.")
end
    print("TSK Base fonksiyonu çalıştı")
end
