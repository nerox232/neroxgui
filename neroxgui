-- İçerik temizleme
local function clearContent()
    for _, child in pairs(contentFrame:GetChildren()) do
        if not child:IsA("UIListLayout") and not child:IsA("UITextSizeConstraint") then
            child:Destroy()
        end
    end
end

-- Ana Menü’ye avatar, isim, hoşgeldin yazısı ekleme
local function setupAnaMenu()
    clearContent()

    local welcomeLabel = Instance.new("TextLabel", contentFrame)
    welcomeLabel.Size = UDim2.new(1, -20, 0, 30)
    welcomeLabel.Position = UDim2.new(0, 10, 0, 10)
    welcomeLabel.BackgroundTransparency = 1
    welcomeLabel.Text = "Hoşgeldin!"
    welcomeLabel.Font = Enum.Font.GothamBold
    welcomeLabel.TextSize = 28
    welcomeLabel.TextColor3 = Color3.fromRGB(100, 180, 255)
    welcomeLabel.TextXAlignment = Enum.TextXAlignment.Left

    -- Profil çerçevesi
    local profileFrame = Instance.new("Frame", contentFrame)
    profileFrame.Size = UDim2.new(1, -20, 0, 70)
    profileFrame.Position = UDim2.new(0, 10, 0, 50)
    profileFrame.BackgroundTransparency = 1

    -- Profil foto dairesi
    local avatarCircle = Instance.new("ImageLabel", profileFrame)
    avatarCircle.Size = UDim2.new(0, 60, 0, 60)
    avatarCircle.Position = UDim2.new(0, 0, 0, 0)
    avatarCircle.BackgroundTransparency = 1
    avatarCircle.Image = "rbxthumb://type=AvatarHeadShot&id=" .. player.UserId .. "&w=420&h=420"
    local circleCorner = Instance.new("UICorner", avatarCircle)
    circleCorner.CornerRadius = UDim.new(1, 0)

    -- Oyuncu adı
    local nameLabel = Instance.new("TextLabel", profileFrame)
    nameLabel.Size = UDim2.new(1, -70, 1, 0)
    nameLabel.Position = UDim2.new(0, 70, 0, 0)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = player.Name
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextSize = 24
    nameLabel.TextColor3 = Color3.new(1,1,1)
    nameLabel.TextXAlignment = Enum.TextXAlignment.Left
    nameLabel.TextYAlignment = Enum.TextYAlignment.Center
end

-- Discord sekmesi içerik
local function setupDiscord()
    clearContent()
    local discordLabel = Instance.new("TextLabel", contentFrame)
    discordLabel.Size = UDim2.new(1, -20, 0, 60)
    discordLabel.Position = UDim2.new(0, 10, 0, 10)
    discordLabel.BackgroundTransparency = 1
    discordLabel.Text = "discord.gg/xM3NURznym"
    discordLabel.Font = Enum.Font.GothamBold
    discordLabel.TextSize = 32
    discordLabel.TextColor3 = Color3.fromRGB(100, 180, 255)
    discordLabel.TextXAlignment = Enum.TextXAlignment.Center
    discordLabel.TextYAlignment = Enum.TextYAlignment.Center
end

-- İçeriği oluştur (butonlar / özel içerik)
local function createContentButtons(buttonList, tabName)
    if tabName == "Ana Menü" then
        setupAnaMenu()
    elseif tabName == "Discord" then
        setupDiscord()
    else
        clearContent()
        for i, btnData in ipairs(buttonList) do
            local btn = createButtonWithIcon(btnData.Name, btnData.Icon)
            btn.Parent = contentFrame
            btn.Position = UDim2.new(0, 10, 0, (i-1)*45 + 10)

            btn.MouseButton1Click:Connect(function()
                ButtonClicked(btnData.Name)
            end)
        end
    end
end

-- Sekme butonları yaratma
local tabButtons = {}

local function createTabButton(tabName)
    local btn = Instance.new("TextButton", tabList)
    btn.Size = UDim2.new(1, -12, 0, 35)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.BorderSizePixel = 0
    btn.Text = tabName
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 18
    local btnCorner = Instance.new("UICorner", btn)
    btnCorner.CornerRadius = UDim.new(0, 8)

    addHoverEffect(btn)

    btn.MouseButton1Click:Connect(function()
        createContentButtons(tabs[tabName], tabName)
    end)

    return btn
end

-- Sekmeler sıralı oluşturuluyor
local tabNamesOrdered = {"Ana Menü", "Troll", "Jack", "Abuse", "Autofarm", "Teleportlar", "Diğer", "Discord"}

for _, tabName in ipairs(tabNamesOrdered) do
    table.insert(tabButtons, createTabButton(tabName))
end

-- İlk olarak Ana Menü seçili gelsin
createContentButtons(tabs["Ana Menü"], "Ana Menü")

-- Minimize ve kapatma işlevleri
local minimized = false

minimizeButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        contentFrame.Visible = false
        tabList.Visible = false
        TweenService:Create(mainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 300, 0, 45)}):Play()
    else
        contentFrame.Visible = true
        tabList.Visible = true
        TweenService:Create(mainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 600, 0, 400)}):Play()
    end
end)

closeButton.MouseButton1Click:Connect(function()
    -- Fade out animasyon
    for _, obj in ipairs(gui:GetDescendants()) do
        if obj:IsA("TextLabel") or obj:IsA("TextButton") then
            TweenService:Create(obj, TweenInfo.new(0.3), {TextTransparency = 1}):Play()
        elseif obj:IsA("ImageLabel") then
            TweenService:Create(obj, TweenInfo.new(0.3), {ImageTransparency = 1}):Play()
        elseif obj:IsA("Frame") then
            TweenService:Create(obj, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
        end
    end
    task.wait(0.35)
    gui:Destroy()
end)
