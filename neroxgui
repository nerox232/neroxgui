-- Buton isimlerine göre fonksiyon çağırma
local function ButtonClicked(name)
    if name == "Chatlogs" then
        ChatlogsFonksiyonu()
    elseif name == "Anti Track" then
        AntiTrackFonksiyonu()
    elseif name == "Araç Kontrol" then
        AracKontrolFonksiyonu()
    elseif name == "Ölümsüzlük" then
        OlumsuzlukFonksiyonu()
    elseif name == "Sahte Mesaj" then
        SahteMesajFonksiyonu()
    elseif name == "Duyuru Abuse" then
        DuyuruAbuseFonksiyonu()
    elseif name == "Jerk Off Tool" then
        JerkOffToolFonksiyonu()
    elseif name == "Fling Touch" then
        FlingTouchFonksiyonu()
    elseif name == "Jack Çekme Gui" then
        JackGuiFonksiyonu()
    elseif name == "Herkesi As.İz Yap" then
        HerkesiAsIzYapFonksiyonu()
    elseif name == "Herkese Reset At" then
        HerkeseResetAtFonksiyonu()
    elseif name == "Herkese Bring At" then
        HerkeseBringAtFonksiyonu()
    elseif name == "Herkesi Öldür (İsyancı olman gerek)" then
        HerkesiOldurFonksiyonu()
    elseif name == "Tepeköy Autofarm" then
        TepekoyAutofarmFonksiyonu()
    elseif name == "TSK Base" then
        TSKBaseFonksiyonu()
    elseif name == "Denetim Alanı" then
        DenetimAlaniFonksiyonu()
    elseif name == "Kafetarya" then
        KafetaryaFonksiyonu()
    elseif name == "Sivil Base" then
        SivilBaseFonksiyonu()
    elseif name == "Infinite Yield Admin" then
        InfiniteYieldAdminFonksiyonu()
    elseif name == "TP Tool" then
        TPToolFonksiyonu()
    elseif name == "Silent Aim" then
        SilentAimFonksiyonu()
    else
        print(name .. " fonksiyonu tanımlı değil.")
    end
end

