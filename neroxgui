loadFrame.Size = UDim2.new(0, 400, 0, 120)
loadFrame.Position = UDim2.new(0.5, -200, 0.5, -60)
loadFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
loadFrame.BorderSizePixel = 0
loadFrame.ClipsDescendants = true
local loadCorner = Instance.new("UICorner", loadFrame)
loadCorner.CornerRadius = UDim.new(0, 12)

local loadText = Instance.new("TextLabel", loadFrame)
