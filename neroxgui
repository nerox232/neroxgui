local tweenInfo = TweenInfo.new(4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local tween = TweenService:Create(loadBarFill, tweenInfo, {Size = UDim2.new(1,0,1,0)})
tween:Play()
tween.Completed:Wait()
task.wait(0.5)
